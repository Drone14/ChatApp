<Window x:Class="ChatAppGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppGUI"
        mc:Ignorable="d" Height="450" Width="800" Title="My Chat App" Closing="OnClose">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="MessageBox" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Width="660" Height="56"/>
        <TextBox x:Name="DisplayBox" Grid.Column="1" HorizontalAlignment="Center" Height="344" TextWrapping="Wrap" VerticalAlignment="Center" Width="736" IsReadOnly="True"/>
        <Button x:Name="SendButton" Content="Send" Grid.Column="1" HorizontalAlignment="Left" Margin="660,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="56" Width="76" Click="OnClick"/>
    </Grid>
</Window>
